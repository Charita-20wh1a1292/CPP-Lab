/******************************************************************************
  Divide by zero exception
*******************************************************************************/
#include<iostream>
using namespace std;
int main()
{
	int a, b;
	cout<<"Enter a and b values:"<<endl;
	cin>>a>>b;
	try
	{
		if(b == 0)
		throw b;
		else
		cout<<"a/b = "<<(a/b);
	}
	catch(int b)
	{
		cout<<"b cannot be zero";
	}
	return 0;
	}

